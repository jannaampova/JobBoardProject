@{
    Layout = null;
}
@using JobBoard.Models.ViewModels
@model JobBoard.Models.ViewModels.CompanyListingViewModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/css/company/listingDetails.css" asp-append-version="true" />
    <title>Jobby - Listing Details</title>
</head>
<body style="font-family: 'Poppins', sans-serif;">
    @await Html.PartialAsync("~/Views/sidebarCompany.cshtml", new CompanyDashboardViewModel(){user = Model.user})
    <div class="main-content">
        <div class="job-content">
            <a asp-controller="OurListings" asp-action="Index" class="back-link">← Back to Listings</a>
            <h1 class="page-title">@Model.selectedListing.title</h1>

            <div class="content-section">
                <h2 class="section-title">Description</h2>
                <div class="section-content">
                    <p>@Model.selectedListing.Description</p>
                </div>
            </div>

            <div class="content-section">
                <h2 class="section-title">Requirements</h2>
                <div class="tag-container">
                    @foreach (var lr in @Model.requirements)
                    {
                        <div class="tag">
                            <i>✓</i>
                            <span>@lr</span>
                        </div>
                    }
                </div>
            </div>

            <div class="content-section">
                <h2 class="section-title">Benefits</h2>
                <div class="tag-container">
                @foreach (var lb in @Model.benefits)
                {
                    <div class="tag benefit">
                        <i>✓</i>
                        <span>@lb</span>
                    </div>
                }
                </div>
            </div>
        </div>

        <div class="stats-info">
            <div class="meta-item">
                <i>🏢</i>
                <span>@Model.selectedListing.company.industry.industry</span>
            </div>
            <div class="meta-item">
                <i>📍</i>
                <span>@Model.selectedListing.town.Name</span>
            </div>
            <div class="meta-item">
                <i>💼</i>
                <span>@Model.selectedListing.jobType.jobType</span>
            </div>
            <div class="meta-item">
                <i>⭐</i>
                <span>@Model.selectedListing.experienceLevel</span>
            </div>
           
            <div class="meta-item">
                <i>📅</i>
                <span>@Model.selectedListing.datePosted</span>
            </div>
            <div class="meta-item">
                <span class="status active">@Model.selectedListing.status</span>
            </div>

            <div class="stats-grid">
                <div class="stat-card">
                    <div class="stat-value">@Model.selectedListing.Applications.Count</div>
                    <div class="stat-label">Applications</div>
                </div>
                <div class="stat-card">
                    <div class="stat-value">8</div>
                    <div class="stat-label">Interviews</div>
                </div>
            </div>

            <div class="action-buttons">
                <a asp-controller="OurListings" asp-action="EditListing" class="action-button edit-button">Edit Listing</a>
                <a asp-action="ChangeStatus" asp-controller="OurListings" asp-route-id="@Model.selectedListing.Id" class="action-button close-button">Close Listing</a>
            </div>
        </div>
    </div>
</body>
</html> 