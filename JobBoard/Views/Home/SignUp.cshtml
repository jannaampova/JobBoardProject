@{
    ViewData["Title"] = "Sign Up";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Job Board</title>
    <link rel="stylesheet" href="~/css/home.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/form.css" asp-append-version="true" />
</head>
<style>
    .form {
        height: 65%;
    }

    header {
        margin-top: 0px;
    }

    h1 {
        margin-top: 45%;
    }
</style>
<body>
    <div class="nav">
        <div class="logo">
            <h2>Job Board</h2>
        </div>
        <div>
            <ul class="nav-links">
                <li><a href="">Home</a></li>
            </ul>
        </div>
    </div>
    <div class="grid-container">
        <div class="grid-item">
            <h1>
                Start your career journey here!
                <br>We wish you luck!
            </h1>


        </div>
        <div class="form grid-item">
            <header>Sign Up</header>
            @model JobBoard.Models.Account
            <form asp-action="SignUp" method="post">
                <label for="name">Full Name/Company Name</label>
                <input type="text" name="Name" id="" placeholder="Teodora Stoycheva / CSoft" required />
                <label for="username">Username</label>
                <input type="text" name="Username" id="" placeholder="tedi13" required />
                <label for="email">Email</label>
                <input type="email" name="Email" id="" placeholder="tedi@gmail.com" required />
                <label for="role">Role</label>
                <select name="AccTypeId" id="">
                    <option value="" disabled selected><i>Select your role</i></option>
                    <option value="1">Company</option>
                    <option value="2">Candidate</option>
                </select>
                <label for="password">Password</label>
                <input type="password" name="Password" id="" />
                <label for="password2">Repeat password</label>
                <input type="password" name="password2" id="" />
                <input type="submit" value="Sign Up" />
            </form>
            <div class="linkToLogIn">
                Already have an account? Log in <a href="logIn.html" style="text-decoration: none;">here</a>
            </div>
        </div>

    </div>
</body>
</html>
