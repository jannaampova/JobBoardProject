@{
    Layout = null;
}
@model JobBoard.Models.ViewModels.CandidateDashboardViewModel
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Q4 Engineer at CSoft - Job Details</title>
    <link rel="stylesheet" href="~/css/candidate/job-details.css" asp-append-version="true" />
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600&display=swap" rel="stylesheet" />
</head>
<body>
        @await Html.PartialAsync("~/Views/sidebar.cshtml", Model)
    <div class="main-content">
        <div class="job-content">
            <a asp-action="CandidateDashboard" asp-action="Applicant" class="back-link">← Back to Job Board</a>
            <h1 class="page-title">Q4 Engineer</h1>

            <div class="content-section">
                <h2 class="section-title">Description</h2>
                <div class="section-content">
                    <p>We are looking for a talented Q4 Engineer to join our growing team at CSoft. This is an exciting opportunity to work on cutting-edge projects in a dynamic environment.</p>
                </div>
            </div>

            <div class="content-section">
                <h2 class="section-title">Requirements</h2>
                <div class="tag-container">
                    <div class="tag">
                        <i>✓</i>
                        <span>2-5 years experience</span>
                    </div>
                    <div class="tag">
                        <i>✓</i>
                        <span>Strong programming skills</span>
                    </div>
                    <div class="tag">
                        <i>✓</i>
                        <span>Problem solving</span>
                    </div>
                    <div class="tag">
                        <i>✓</i>
                        <span>Communication skills</span>
                    </div>
                </div>
            </div>

            <div class="content-section">
                <h2 class="section-title">Benefits</h2>
                <div class="tag-container">
                    <div class="tag benefit">
                        <i>✓</i>
                        <span>Competitive salary</span>
                    </div>
                    <div class="tag benefit">
                        <i>✓</i>
                        <span>Flexible hybrid work</span>
                    </div>
                    <div class="tag benefit">
                        <i>✓</i>
                        <span>Health insurance</span>
                    </div>
                    <div class="tag benefit">
                        <i>✓</i>
                        <span>Modern office</span>
                    </div>
                </div>
            </div>
        </div>

        <div class="company-info">
            <div class="company-logo">
                CS
            </div>
            <h2 class="company-name">CSoft</h2>
            <div class="meta-item">
                <i>🏢</i>
                <span>Technology</span>
            </div>
            <div class="meta-item">
                <i>📍</i>
                <span>Varna</span>
            </div>
            <div class="meta-item">
                <i>💼</i>
                <span>Hybrid</span>
            </div>
            <div class="meta-item">
                <i>⭐</i>
                <span>Mid-level</span>
            </div>
            <div class="meta-item">
                <i>💰</i>
                <span>2500 BGN</span>
            </div>
            <div class="meta-item">
                <i>📅</i>
                <span>Posted Feb 1, 2025</span>
            </div>

            <div class="job-actions">
                <button class="bookmark-btn" onclick="toggleBookmark(this)">Save</button>
                <a asp-controller="JobDetails" asp-action="Apply" class="apply-btn">Apply Now</a>
            </div>
        </div>
    </div>

    <script>
        function toggleBookmark(button) {
            button.classList.toggle('active');
            button.textContent = button.classList.contains('active') ? 'Saved' : 'Save';
        }
    </script>
</body>
</html> 