@{
    Layout = null;
}
@model JobBoard.Models.ViewModels.CandidateDashboardViewModel
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Account Settings - Jobby</title>
    <link rel="stylesheet" href="~/css/candidate/account-settings.css" asp-append-version="true" />
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600&display=swap" rel="stylesheet">
    <script>
        UPLOADCARE_PUBLIC_KEY = '9d8862f4a274c4136b36';
    </script>
    <script src="https://ucarecdn.com/libs/widget/3.x/uploadcare.full.min.js"></script>
   
</head>
<body>
    @await Html.PartialAsync("~/Views/sidebar.cshtml", Model)
    <div class="main-content">
        <h1 class="page-title">Account Settings</h1>

        <div class="settings-section">
            <h2 class="section-title">Profile Information</h2>
            <div class="profile-header">
                <form method="post" asp-action="UploadImage">
                    <input type="hidden" name="ImageUrl" role="uploadcare-uploader" data-clearable />
                    <button type="submit">Save</button>
                </form>
                <div class="profile-photo">
                    <!-- Profile photo placeholder -->
                    <button class="photo-upload">📷</button>
                </div>
                <div class="form-group">
                    <label class="form-label">Profile Photo</label>
                    <input type="file" class="form-control" accept="image/*">
                </div>
            </div>

            <div class="form-group">
                <label class="form-label">Full Name</label>
                <input type="text" class="form-control" value="Name Surname">
            </div>

            <div class="form-group">
                <label class="form-label">Email</label>
                <input type="email" class="form-control" value="namesurname@mail.com">
            </div>

            <div class="form-group">
                <label class="form-label">Phone</label>
                <input type="tel" class="form-control" value="phone">
            </div>

            <button type="submit" class="save-btn">Save Changes</button>
        </div>

        <div class="settings-section">
            <h2 class="section-title">Resume/CV</h2>
            <div class="form-group">
                <label class="form-label">Upload New Resume</label>
                <input type="file" class="form-control" accept=".pdf,.doc,.docx">
            </div>
            <button type="submit" class="save-btn">Update Resume</button>
        </div>

        <div class="settings-section">
            <h2 class="section-title">Password</h2>
            <div class="form-group">
                <label class="form-label">Current Password</label>
                <input type="password" class="form-control">
            </div>
            <div class="form-group">
                <label class="form-label">New Password</label>
                <input type="password" class="form-control">
            </div>
            <div class="form-group">
                <label class="form-label">Confirm New Password</label>
                <input type="password" class="form-control">
            </div>
            <button type="submit" class="save-btn">Change Password</button>
        </div>

        <div class="settings-section">
            <h2 class="section-title">Skills</h2>
            <div class="checkbox-group">
                <div class="form-checkbox">
                    <input type="checkbox" id="tech1" checked>
                    <label for="tech1">JavaScript</label>
                </div>
                <div class="form-checkbox">
                    <input type="checkbox" id="tech2" checked>
                    <label for="tech2">Python</label>
                </div>
                <div class="form-checkbox">
                    <input type="checkbox" id="tech3">
                    <label for="tech3">Java</label>
                </div>
                <div class="form-checkbox">
                    <input type="checkbox" id="tech4" checked>
                    <label for="tech4">React</label>
                </div>
                <div class="form-checkbox">
                    <input type="checkbox" id="tech5">
                    <label for="tech5">Node.js</label>
                </div>
                <div class="form-checkbox">
                    <input type="checkbox" id="tech6">
                    <label for="tech6">SQL</label>
                </div>
                <div class="form-checkbox">
                    <input type="checkbox" id="tech6">
                    <label for="tech6">SQL</label>
                </div>   <div class="form-checkbox">
                    <input type="checkbox" id="tech6">
                    <label for="tech6">SQL</label>
                </div>   <div class="form-checkbox">
                    <input type="checkbox" id="tech6">
                    <label for="tech6">SQL</label>
                </div>   <div class="form-checkbox">
                    <input type="checkbox" id="tech6">
                    <label for="tech6">SQL</label>
                </div>   <div class="form-checkbox">
                    <input type="checkbox" id="tech6">
                    <label for="tech6">SQL</label>
                </div>
            </div>

        </div>
        <button type="submit" class="save-btn" style="margin-top: 1.5rem;">Update Skills</button>
    </div>

</body>
</html> 