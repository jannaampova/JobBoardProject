@{
    Layout = null;
}
@using JobBoard.Models.ViewModels
@model JobBoard.Models.ViewModels.JobDetailsModel
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Apply for Q4 Engineer - Jobby</title>
    <link rel="stylesheet" href="~/css/candidate/apply.css" asp-append-version="true" />
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600&display=swap" rel="stylesheet">
   
</head>
<body>
    @await Html.PartialAsync("~/Views/sidebar.cshtml",new CandidateDashboardViewModel { user = Model.user })

    <div class="main-content">
        <div class="application-form">
            <h1 class="page-title">Apply for Q4 Engineer</h1>

            <div class="form-section">
                <div class="profile-header">
                    <div class="profile-photo">
                        <!-- Profile photo placeholder -->
                    </div>
                    <div class="profile-info">
                        <h2>Name Surname</h2>
                        <p>📱 phone</p>
                        <p>📧 namesurname@mail.com</p>
                    </div>
                </div>

                <div class="form-group">
                    <label class="form-label">Resume/CV:</label>
                    <div class="cv-options">
                        <select class="form-control">
                            <option value="">Select existing CV</option>
                            <option value="cv1">CV_Latest.pdf</option>
                            <option value="cv2">Software_Engineer_CV.pdf</option>
                            <option value="cv3">Technical_Resume_2024.pdf</option>
                        </select>
                        <div class="or-divider">or</div>
                        <div class="file-upload">
                            <input type="file" class="form-control" accept=".pdf,.doc,.docx" id="cv-upload">
                            <label for="cv-upload" class="upload-label">Upload new CV</label>
                        </div>
                    </div>
                </div>

                <button type="submit" class="submit-btn">Submit application</button>
            </div>
        </div>

        <div class="job-info">
            <h2 class="job-title">Q4 Engineer</h2>
            <h3 class="company-name">CSoft</h3>
            <div class="job-details">
                <span class="detail-item">🔥 2500 BGN</span>
                <span class="detail-item">📍 Varna</span>
                <span class="detail-item">🔼 2-5 years</span>
                <span class="detail-item">💻 IT</span>
                <span class="detail-item">⬜ Hybrid</span>
                <span class="detail-item">📅 01/02/2025</span>
            </div>
        </div>
    </div>
</body>
</html> 